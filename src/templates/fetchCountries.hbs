<div class="card">
    <div class="card__descr">
        <h2 class="card__title">{{0.name}}</h2>
        <p class="card__text"><span class="descr">Capital: </span>{{0.capital}}</p>
        <p class="card__text"><span class="descr">Population: </span>{{0.population}}</p>
        <ul class="card__list"><span class="descr">Languages:</span>
            {{#each 0.languages}}
            <li class="card__list--el">{{name}}</li>
            {{/each}}
        </ul>
    </div>
        <div class="card__img">
            <img src="{{0.flags.svg}}" alt="{{0.name}}" width="400px">
        </div>
</div>

